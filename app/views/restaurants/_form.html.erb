<%= form_with(model: restaurant, local: true) do |form| %>
  <% if restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :restaurant_name %>
  </div>

  <div class="field">
    <%= form.label :cuisine %>
    <%= form.text_field :cuisine, id: :restaurant_cuisine %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, id: :restaurant_rating, :value => 0, in: 0..3, step: 1 %>
  </div>

  <div class="field">
    <%= form.label :accepts_10bis %>
    <%= form.check_box :accepts_10bis, id: :restaurant_accepts_10bis %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :restaurant_address %>
  </div>

  <div class="field">
    <%= form.label :max_delivery_time_minutes %>
    <%= form.number_field :max_delivery_time_minutes, id: :restaurant_max_delivery_time, in: 0..180, step: 10 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
